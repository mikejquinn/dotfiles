config defaultToCurrentScreen true
config resizePercentOf screenSize
config nudgePercentOf screenSize

# Maximize
bind m:ctrl;cmd corner top-left resize:screenSizeX;screenSizeY

# Resize Bindings
#bind right:alt       resize +10% +0
#bind left:alt        resize -10% +0
#bind up:alt          resize +0   -10%
#bind down:alt        resize +0   +10%
#bind right:ctrl;alt  resize -10% +0 bottom-right
#bind left:ctrl;alt   resize +10% +0 bottom-right
#bind up:ctrl;alt     resize +0   +10% bottom-right
#bind down:ctrl;alt   resize +0   -10% bottom-right
bind v:ctrl;cmd move windowTopLeftX;0 windowSizeX;screenSizeY

# Nudge Bindings
bind right:ctrl;alt nudge +10% +0
bind left:ctrl;alt  nudge -10% +0
bind up:ctrl;alt    nudge +0   -10%
bind down:ctrl;alt  nudge +0   +10%

#
# Resize a window to occupy half the screen.
# (Currently I'm using a padding of 5 between windows).
#

# Use the "move" command instead of "push" here so I can leave margins in between windows.
bind left:ctrl;cmd move screenOriginX;screenOriginY screenSizeX/2-5;screenSizeY
bind up:ctrl;cmd move screenOriginX;screenOriginY screenSizeX;screenSizeY/2-5
bind right:ctrl;cmd move screenOriginX+screenSizeX/2+5;screenOriginY screenSizeX/2-5;screenSizeY
bind down:ctrl;cmd move screenOriginX;screenOriginY+screenSizeY/2+5 screenSizeX;screenSizeY/2-5

#
# Occupy a window to occupy a quarter of the screen
#

bind left:ctrl;shift;cmd move screenOriginX;screenOriginY screenSizeX/2-5;screenSizeY/2-5
bind up:ctrl;shift;cmd move screenOriginX+screenSizeX/2+5;screenOriginY screenSizeX/2-5;screenSizeY/2-5
bind right:ctrl;shift;cmd move screenOriginX+screenSizeX/2+5;screenOriginY+screenSizeY/2+5 screenSizeX/2-5;screenSizeY/2-5
bind down:ctrl;shift;cmd move screenOriginX;screenOriginY+screenSizeY/2+5 screenSizeX/2-5;screenSizeY/2-5

#
# Move a window to a given monitor.
#
bind 1:ctrl;cmd throw left resize
bind 2:ctrl;cmd throw right resize

bind ;:cmd hint

# Focus an app with a single keystroke.
bind l:cmd;ctrl focus "Google Chrome"
bind j:cmd;ctrl focus "Emacs"
bind k:cmd;ctrl focus "iTerm"
bind u:cmd;ctrl focus "GitX"
bind i:cmd;ctrl focus "Messages"
bind o:cmd;ctrl focus "Things"
bind y:cmd;ctrl focus "Emacs"
bind n:cmd;ctrl focus "MacVim"

