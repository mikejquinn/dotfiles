# Keep connections open for awhile so we don't have to wait if we decide to reconnect
# ControlPersist 4h

# When making multiple connections to the same server, share the connection
# ControlMaster auto
# ControlPath /tmp/ssh_mux_%h_%p_%r

Host adcheckup.com *.liftoff.io *.compute-1.amazonaws.com *.compute.amazonaws.com
  User ubuntu
  PasswordAuthentication no
  ForwardAgent yes
  StrictHostKeyChecking no
  PasswordAuthentication no
  SendEnv LIFTOFF_USERNAME

Host *-vagrant
  HostName 127.0.0.1
  User vagrant
  StrictHostKeyChecking no
  PasswordAuthentication no
  IdentityFile /Users/mikeq/.vagrant.d/insecure_private_key
  IdentitiesOnly yes
  ForwardAgent yes
