alias la='ls -al'
alias ls='ls -G'
alias ll='ls -lh'

alias pl='echo $LD_LIBRARY_PATH | tr ":" "\n" '
alias pp='echo $PATH | tr ":" "\n" '
alias v=mvim
alias vi=vim
alias xt='xterm -j -sb -sl 1000 -bg black -fg gray -bd gray &'
alias sc='pushd .; cd ~; source .zshrc; popd'
alias xpp='xmlstarlet fo'
alias st='git sourcetree'
alias bx='bundle exec'
alias js='java org.mozilla.javascript.tools.shell.Main'

alias liftoff=". ~/.liftoff_profile && cd ~/Development/private/hmp"

alias sshn="ssh -i ~/.ssh/aws-keys/aws-nba-challenge.pem -l ubuntu"
